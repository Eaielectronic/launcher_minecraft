{
  "name": "minecraft-launcher-pro",
  "version": "1.0.0",
  "description": "Launcher Minecraft personnalis√©",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder build --win --mac --linux"
  },
  "author": "Votre Nom",
  "license": "MIT",
  "build": {
    "appId": "com.launcher.minecraft",
    "productName": "Minecraft Launcher Pro",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "category": "Game"
    }
  },
  "dependencies": {
    "@azure/msal-node": "1.14.6",
    "adm-zip": "^0.5.10",
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "fs-extra": "^11.1.1",
    "minecraft-launcher-core": "^3.17.1",
    "node-fetch": "^2.7.0",
    "open": "^10.1.2",
    "rimraf": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "nodemon": "^2.0.22"
  }
}
